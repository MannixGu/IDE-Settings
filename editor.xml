<application>
  <component name="DefaultFont">
    <option name="FONT_FAMILY" value="Fira Code Light" />
    <option name="USE_LIGATURES" value="true" />
  </component>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="PREVIEW" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern case-sensitive="true" pattern="\bfixme\b.*" />
    <pattern case-sensitive="true" pattern="\btest\b.*" />
    <pattern pattern="\bnote\b.*" />
  </component>
</application>